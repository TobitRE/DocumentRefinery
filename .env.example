# Django
DJANGO_SETTINGS_MODULE=config.settings
SECRET_KEY=change-me
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
# Internal endpoints (health/ready/metrics)
INTERNAL_ENDPOINTS_TOKEN=change-me
# DATABASE_URL=postgresql://user:password@localhost:5432/document_refinery
# DATABASE_URL=sqlite:////absolute/path/to/db.sqlite3

# Storage
DATA_ROOT=/var/lib/docling_service
# HuggingFace cache (keep on writable path when ProtectHome=read-only)
HF_HOME=/var/lib/docling_service/hf_cache
UPLOAD_MAX_SIZE_MB=50
MAX_PAGES=0
STATIC_ROOT=/var/www/document_refinery/staticfiles

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500
CELERY_CANCEL_SIGNAL=SIGTERM
CELERY_DEFAULT_QUEUE=default

# ClamAV
CLAMAV_HOST=127.0.0.1
CLAMAV_PORT=3310
# If clamd is socket-activated, use the Unix socket instead of TCP:
# CLAMAV_SOCKET=/run/clamav/clamd.ctl

# Nginx X-Accel-Redirect
X_ACCEL_REDIRECT_ENABLED=true
X_ACCEL_REDIRECT_LOCATION=/protected

# Rate limiting
API_THROTTLE_RATE=120/min

# Webhooks
WEBHOOK_ALLOWED_HOSTS=

# Security (set to true in production behind TLS)
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=false
SECURE_HSTS_PRELOAD=false
SECURE_REFERRER_POLICY=same-origin
CSRF_TRUSTED_ORIGINS=
SECURE_PROXY_SSL_HEADER=false
